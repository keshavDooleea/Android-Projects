<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/note_activity_bck"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryImage">

    <Button
        android:id="@+id/gallery_close_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/gallery_image_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_margin="3.5dp"
        android:layout_height="match_parent"
        android:layout_below="@id/gallery_close_button" />


</RelativeLayout>